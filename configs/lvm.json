{
    "disk": "/dev/sda",
    "dualboot": false,
    "partitions": {
        "boot": ["/dev/sda1", "1G", "fat32"],
        "vg": {
            "partition": ["/dev/sda2", "100%", "lvm"],
            "lv_swap": ["/dev/vg/lv_swap", "8G", "linux-swap"],
            "lv_home": ["/dev/vg/lv_home", "100%", "btrfs"]
        }
    },
    "hostname": "gdb",
    "username": "tvs",
    "locale": "en_US",
    "timezone": "America/New_York",
    "packages": ["base", "base-devel", "linux", "linux-firmware", "amd-ucode", "intel-ucode", "vim", "networkmanager"],
    "enable_services": ["NetworkManager"]
}